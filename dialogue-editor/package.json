{
  "name": "DialogueEditor",
  "version": "1.0.0",
  "description": "Dialogue Editor",
  "private": false,
  "author": "Matt Leffler <matthewjleffler@gmail.com>",
  "license": "MIT",
  "homepage": "./",
  "main": "public/electron.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/matthewjleffler/dialogue-editor-electron"
  },
  "scripts": {
    "dev": "yarn react-scripts start",
    "build": "react-scripts build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "pack": "electron-builder --dir",
    "dist": "npx build --x64 --macos --win --linux --c.extraMetadata.main=build/electron.js -p always"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "electron-is-dev": "^0.3.0",
    "electron-publisher-s3": "^20.17.2",
    "electron-spell-check-provider": "^1.1.1",
    "eslint-plugin-flowtype": "^3.13.0",
    "fibers": "^4.0.2",
    "node-sass": "^4.13.1",
    "react": "^16.12.0",
    "react-dev-utils": "^5.0.1",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-ui-tree": "^4.0.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "sass": "^1.25.0",
    "typescript": "^3.7.5",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "concurrently": "^3.6.0",
    "cross-env": "^5.2.1",
    "electron": "^9.4.0",
    "electron-builder": "^20.44.4",
    "electron-rebuild": "^1.10.0",
    "electron-devtools-installer": "^2.2.4",
    "react-scripts": "^3.3.1",
    "version-bump-prompt": "^4.1.0",
    "wait-on": "^3.3.0"
  },
  "build": {
    "appId": "com.softdrawers.dialogueeditor",
    "compression": "normal",
    "productName": "Example",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "type": "distribution",
      "target": [
        "dmg"
      ],
      "category": "public.app-category.developer-tools"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
